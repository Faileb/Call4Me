# Twilio credentials (required)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Database (defaults to SQLite)
DATABASE_URL=file:./data/call4me.db
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/call4me

# App configuration
APP_PORT=3000
APP_SECRET=your-secure-secret-key-at-least-32-chars
APP_BASE_URL=http://localhost:3000
APP_PASSWORD=your_secure_password

# Optional: Pre-hashed password (use instead of APP_PASSWORD)
# APP_PASSWORD_HASH=

# Storage
RECORDINGS_PATH=./data/recordings

# Optional settings
LOG_LEVEL=info
DISABLE_AUTH=false
NODE_ENV=development
TZ=America/New_York
